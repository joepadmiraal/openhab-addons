<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="eufy"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="camera">
		<supported-bridge-type-refs>
			<bridge-type-ref id="container"/>
		</supported-bridge-type-refs>

		<label>Eufy Camera</label>
		<description>Eufy camera device connected to a station. Supports most Eufy camera types, of which the 1, 2, 2 Pro, 2C,
			FloodLight and Solo series.</description>
		<category>Camera</category>

		<channels>
			<channel typeId="switchDefault" id="enabled">
				<label>Enabled</label>
				<description>If the device is enabled</description>
			</channel>
			<channel typeId="cameraState" id="state"/>

			<channel typeId="system.battery-level" id="battery">
				<label>Battery Level</label>
				<description>The battery level, in percent</description>
			</channel>

			<channel typeId="batteryTemperature" id="batteryTemperature"/>

			<channel typeId="motionDetection" id="motionDetection"/>

			<channel typeId="motionDetectionType" id="motionDetectionType"/>

			<channel typeId="motionDetectionSensitivity" id="motionDetectionSensitivity"/>

			<channel typeId="system.motion" id="motionDetected">
				<label>Motion Detected</label>
				<description>If the camera detected motion</description>
			</channel>

			<channel typeId="system.motion" id="personDetected">
				<label>Person Detected</label>
				<description>If the camera detected motion from a person</description>
			</channel>

			<channel typeId="personName" id="personName"/>

			<channel typeId="switchDefault" id="autoNightvision">
				<label>Auto Night Vision</label>
				<description>If the camera switches to night vision automatically</description>
			</channel>

			<channel typeId="watermark" id="watermark"/>

			<channel typeId="wifiSignalLevel" id="wifiSignalLevel"/>

			<channel typeId="picture" id="picture"/>

			<channel typeId="pictureUrl" id="pictureUrl"/>

			<channel typeId="switchDefault" id="audioRecording">
				<label>Audio Recording</label>
				<description>When recording video, should audio also be recorded?</description>
			</channel>

			<channel typeId="switchDefault" id="speaker">
				<label>Speaker</label>
				<description>Speaker of the camera enabled?</description>
			</channel>

			<channel typeId="system.volume" id="speakerVolume">
				<label>Speaker Volume</label>
				<description>Volume of the speaker of this camera</description>
			</channel>

			<channel typeId="switchAdvanced" id="statusLed">
				<label>LED Status</label>
				<description>LED status light turns on when recording?</description>
			</channel>

			<channel typeId="switchDefault" id="antitheftDetection">
				<label>Anti Theft</label>
				<description>Anti theft functionality armed</description>
			</channel>

			<channel typeId="switchDefault" id="rtspStream">
				<label>RTSP Stream</label>
				<description>If the device is currently streaming an RTSP stream</description>
			</channel>

			<channel typeId="switchDefault" id="microphone">
				<label>Microphone</label>
				<description>Microphone enabled?</description>
			</channel>

			<channel typeId="chargingStatus" id="chargingStatus"/>

			<channel typeId="notificationType" id="notificationType"/>

			<channel typeId="powerSource" id="powerSource"/>

			<channel typeId="secondsType" id="recordingClipLength">
				<label>Recording Clip Length</label>
				<description>Length of a recording clip (seconds)</description>
			</channel>

			<channel typeId="switchAdvanced" id="recordingEndClipMotionStops">
				<label>Record End Clip Motion Stops</label>
				<description>End the recording clip when motion stops</description>
			</channel>

			<channel typeId="secondsType" id="recordingRetriggerInterval">
				<label>Recording Retrigger Interval</label>
				<description>Retrigger recording is there is new movement within this interval (seconds)</description>
			</channel>

			<channel typeId="rtspStreamUrl" id="rtspStreamUrl"/>

		</channels>

	</thing-type>

</thing:thing-descriptions>
